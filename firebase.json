{
  "functions": {
    "predeployfoo": "npm --prefix \"$RESOURCE_DIR\" run build"
  },
  "hosting": {
    "public": "packages/client/build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    }
  }
}
